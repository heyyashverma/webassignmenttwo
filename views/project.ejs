<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= project.title %> - Details</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body class="bg-base-200">

  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-4"><%= project.title %></h1>
    <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="rounded-lg shadow-md mb-6" />

    <p class="mb-4"><strong>Sector:</strong> <%= project.Sector.sector_name %></p>
    <p class="mb-4"><%= project.intro_short %></p>
    <p class="mb-4"><strong>Impact:</strong> <%= project.impact %></p>

    <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-outline btn-primary">More Info</a>
    <a href="/solutions/editProject/<%= project.id %>" class="btn btn-success ml-4">Edit Project</a>

    <hr class="my-6">

    <h2 class="text-2xl font-semibold mb-2">Random Quote:</h2>
    <p id="quote" class="italic text-lg mb-1"></p>
    <p id="author" class="text-sm text-gray-600 mb-4"></p>

    <a href="/solutions/projects" class="btn btn-primary">Back to Projects</a>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(res => res.json())
        .then(data => {
          document.getElementById("quote").textContent = `"${data.quote}"`;
          document.getElementById("author").textContent = `â€” ${data.author}`;
        });
    });
  </script>

</body>
</html>
