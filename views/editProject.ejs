<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
  <meta charset="UTF-8">
  <title>Edit Project - <%= project.title %></title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-base-200">

  <%- include('partials/navbar', { page: '' }) %>

  <div class="max-w-2xl mx-auto mt-10 p-6 bg-base-100 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6">Edit Project - <%= project.title %></h1>

    <form action="/solutions/editProject" method="POST" class="space-y-4">

      <input type="hidden" name="id" value="<%= project.id %>">

      <div>
        <label class="label">
          <span class="label-text">Project Title</span>
        </label>
        <input type="text" name="title" class="input input-bordered w-full" value="<%= project.title %>" required>
      </div>

      <div>
        <label class="label">
          <span class="label-text">Feature Image URL</span>
        </label>
        <input type="text" name="feature_img_url" class="input input-bordered w-full" value="<%= project.feature_img_url %>">
      </div>

      <div>
        <label class="label">
          <span class="label-text">Short Summary</span>
        </label>
        <textarea name="summary_short" class="textarea textarea-bordered w-full" required><%= project.summary_short %></textarea>
      </div>

      <div>
        <label class="label">
          <span class="label-text">Short Introduction</span>
        </label>
        <textarea name="intro_short" class="textarea textarea-bordered w-full"><%= project.intro_short %></textarea>
      </div>

      <div>
        <label class="label">
          <span class="label-text">Impact</span>
        </label>
        <textarea name="impact" class="textarea textarea-bordered w-full"><%= project.impact %></textarea>
      </div>

      <div>
        <label class="label">
          <span class="label-text">Original Source URL</span>
        </label>
        <input type="text" name="original_source_url" class="input input-bordered w-full" value="<%= project.original_source_url %>">
      </div>

      <div>
        <label class="label">
          <span class="label-text">Select Sector</span>
        </label>
        <select name="sector_id" class="select select-bordered w-full" required>
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>" <%= project.sector_id === sector.id ? "selected" : "" %>><%= sector.sector_name %></option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary w-full mt-4">Update Project</button>

      <!-- Delete Button -->
      <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error w-full mt-4"
         onclick="return confirm('Are you sure you want to delete this project?');">
        Delete Project
      </a>

    </form>
  </div>
</body>
</html>
